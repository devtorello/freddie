{
  "name": "@freddie/woof",
  "version": "0.0.1",
  "tasks": {
    "dev": "deno run --watch main.ts",
    "start": "deno run main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  },
  "lint": {
    "include": ["src"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "camelcase",
        "eqeqeq",
        "default-param-last",
        "no-console",
        "no-inferrable-types",
        "no-non-null-asserted-optional-chain",
        "no-undef",
        "no-useless-rename"
      ]
    }
  }
}
