{
	"name": "@freddie/hooks",
	"version": "1.0.0",
	"exports": {
		".": "./cli.ts"
	},
	"tasks": {
		"dev": "deno run --watch cli.ts",
		"start": "deno run cli.ts",
		"lint": "deno lint",
		"fmt": "deno fmt",
		"test": "deno test",
		"test:dev": "deno test --watch"
	},
	"fmt": {
		"include": [
			"src",
			"tests",
			"cli.ts"
		],
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"semiColons": true,
		"singleQuote": true
	},
	"lint": {
		"include": [
			"src",
			"tests",
			"cli.ts"
		],
		"rules": {
			"tags": ["recommended"],
			"include": [
				"camelcase",
				"eqeqeq",
				"default-param-last",
				"no-console",
				"no-inferrable-types",
				"no-non-null-asserted-optional-chain",
				"no-undef",
				"no-useless-rename"
			]
		}
	},
	"imports": {
		"@std/flags": "jsr:@std/flags@^0.224.0",
		"@std/io": "jsr:@std/io@^0.225.2",
		"@std/testing": "jsr:@std/testing@^1.0.11"
	},
	"exclude": [
		"**/.freddie"
	]
}
